<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/white" >
	<RelativeLayout
		android:id="@+id/readingOptionsHeaderLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/digital_bible_color" >
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:layout_margin="6dp"
			android:textColor="@color/white"
			android:textSize="20sp"
			android:text="@string/reading_options_string" >
		</TextView>
	</RelativeLayout>
	<ListView
		android:id="@+id/readingOptionsListView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/readingOptionsHeaderLayout" >
	</ListView>
</RelativeLayout>

