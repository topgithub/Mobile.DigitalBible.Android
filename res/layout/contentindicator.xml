<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/white" >
	<TextView
		android:id="@+id/contentIndicatorSubtitle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_marginBottom="12dp"
		android:textSize="16sp"
		android:textStyle="bold" >
	</TextView>
	<com.viewpagerindicator.CirclePageIndicator
		android:id="@+id/contentIndicatorCircles"
		android:padding="10dip"
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:layout_below="@id/contentIndicatorSubtitle" >
	</com.viewpagerindicator.CirclePageIndicator>
	<android.support.v4.view.ViewPager
		android:id="@+id/contentIndicatorPager"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/contentIndicatorCircles" >
	</android.support.v4.view.ViewPager>
</RelativeLayout>

